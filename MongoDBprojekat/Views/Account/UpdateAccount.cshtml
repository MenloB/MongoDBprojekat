
@{
    ViewBag.Title = "UpdateAccount";
    Layout = "~/Views/Shared/_Blank.cshtml";
}

<h2>UpdateAccount</h2>

<form method="post" action="/Account/Update" enctype="multipart/form-data">
    <p>ID: <input readonly name="id" class="form-control" value="@Model.Id" /></p>
    <p>First Name: <input type="text" name="firstname" class="form-control" value="@Model.FirstName" /></p>
    <p>Last Name: <input type="text" name="lastname" class="form-control" value="@Model.LastName" /></p>
    <p>Username: <input type="text" name="username" class="form-control" value="@Model.Username" /></p>
    <p>Email: <input type="text" name="email" class="form-control" value="@Model.Email" /></p>
    <p>Password: <input type="text" name="password" class="form-control" value="" /></p>
    <p>Confirm Password: <input type="text" name="confpassword" class="form-control" value="" /></p>
    <p><input type="submit" name="submit" class="btn btn-primary" value="Update" /></p>
</form>